{
  "swagger": "2.0",
  "info": {
    "title": "Recipes API",
    "description": "This API allows for users to retrieve and update recipes information.",
    "version": "1.0"
  },
  
  "host": "http://localhost",
  "basePath": "/api/v1",
  "schemes": [
    "https"
  ],

  "parameters": {
    "menu": {
      "name": "menu",
      "in": "body",
      "description": "A new recipe to be created",
      "required": true,
      "schema": {
        "name": {}
      }
    },

    "menuNameInPath": {
      "name": "menuName",
      "in": "path",
      "description": "The name of the recipe",
      "required": true,
      "schema": {
        "type": "string"
      },
      "default": "Roasted Asparagus"
    },

    "categoria": {
      "name": "categoria",
      "description": "categoria do menu",
      "required": true,
      "in": "header",
      "default": ""
    },

    "serving Size": {
      "name": "serving Size",
      "description": "Serving Size do menu",
      "required": true,
      "in": "header",
      "default": ""
    },

    "item": {
      "name": "item",
      "description": "item do menu",
      "required": true,
      "in": "header",
      "default": ""
    },

    "menuBodyMenu": {
      "name": "id_menu",
      "description": "O nome do menu",
      "required": true,
      "in": "body",
      "type": "integer",
      "defaultValue": "1"
    },

    "menuBodyServingSize": {
      "name": "serving Size",
      "description": "O serving Size do menu",
      "required": true,
      "in": "body",
      "schema": {
        "type": "string",
        "default": "4.8 oz (136 g)"
      }
    },
    "menuBodyCategoria": {
      "name": "categoria",
      "description": "A categoria do menu",
      "required": true,
      "in": "body",
      "schema": {
        "type": "string",
        "default": "Breakfast"
      }
    },
    "menuBodyItem": {
      "name": "item",
      "description": "O item do menu",
      "required": true,
      "in": "body",
      "schema": {
        "type": "string",
        "default": "Egg McMuffin"
      }
    }
  },
  "paths": {
    "/version": {
      "get": {
        "description": "Retrieves the current version of the API",
        "responses": {
          "200": {
            "description": "This endpoint always returns with success"
          }
        }
      }
    },
    "/menu/": {
      "get": {
        "description": "Retrieves all the available menus",
        "responses": {
          "200": {
            "description": "This endpoint always returns with success"
          }
        }
      },
      "post": {
        "description": "Insert a new menu into the database",
        "responses": {
          "201": {
            "description": "If the menu was created successfully"
          },
          "400": {
            "description": "If an error occurs"
          }
        }
      },
      "put": {
        "description": "Insert a new recipe into the database",
        "responses": {
          "201": {
            "description": "If the recipe was created successfully"
          },
          "400": {
            "description": "If an error occurs"
          }
        },
        "parameters": [
          {
            "$ref": "#/parameters/menuBodyMenu"
          },
          {
            "$ref": "#/parameters/menuBodyServingSize"
          },
          {
            "$ref": "#/parameters/menuBodyCategoria"
          },
          {
            "$ref": "#/parameters/menuBodyItem"
          }
        ]
      },
      "delete": {
        "description": "Insert a new recipe into the database",
        "responses": {
          "201": {
            "description": "If the recipe was created successfully"
          },
          "400": {
            "description": "If an error occurs"
          }
        },
        "parameters": [
          {
            "$ref": "#/parameters/menuBodyMenu"
          },
          {
            "$ref": "#/parameters/menuBodyServingSize"
          },
          {
            "$ref": "#/parameters/menuBodyCategoria"
          },
          {
            "$ref": "#/parameters/menuBodyItem"
          }
        ]
      }
    },
    "/menu/{id_menu}": {
      "get": {
        "description": "Retrieves a recipe by its name",
        "parameters": [
          {
            "$ref": "#/parameters/menuNameInPath"
          }
        ],
        "responses": {
          "200": {
            "description": "If the recipe exists"
          },
          "404": {
            "description": "If there is no recipe with the given name"
          }
        }
      }
    },
    "/api/version": {
      "get": {
        "description": "Obtem a vers√£o atual da API",
        "responses": {
          "200": {
            "description": "Este endpoint retorna sempre com successo"
          }
        }
      }
    }
  }
}